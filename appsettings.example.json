{
	"Kestrel": {
		"Limits": {
			"MaxConcurrentConnections": 100, // default
			"MaxConcurrentUpgradedConnections": 100, // default
			"MaxRequestBodySize": 33554432, // 32MB, default is 30MB
			"MaxRequestLineSize": 32768, // 32KB, default is 8KB
			"MaxRequestBufferSize": 2097152, // 2MB, default is 1MB
			"MaxRequestHeaderCount": 200, // default is 100
			"MaxRequestHeadersTotalSize": 65536 // 64KB, default is 32KB
		},
		"DisableStringReuse": true,
		"ResponseHeaderEncodingSelector": "UTF8Encoding"
	},
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"AllowedHosts": "*",
	"DatabaseServer": { "ConnectionString": "" },
	"AppSettings": {
		"EmailServer": "",
		"EmailFrom": "",
		"EmailTo": "",
		"EmailCC": "",
		"RecaptchaPublicKey": "",
		"RecaptchaPrivateKey": "",
		"StatisticsKey": "",
		"PathToGO": ".\\wwwroot\\Databases\\GeneOntology.xml.gz",
		"PathToSpeciesAnnotations": ".\\wwwroot\\Databases\\SpeciesAnnotations.xml.gz",
		"JobTimeout": "00:20:00",
		"SessionTimeout": "01:00:00"
	}
}
