@page
@model IRB.RevigoWeb.Pages.ErrorModel
@{
}
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link href="@Url.Content("~/css/styles.css")" rel="stylesheet" type="text/css" />
	<title>REVIGO error page</title>
</head>
<body style="background-image: url('@Url.Content("~/Images/wavy_top_short_fade.png")'); background-repeat: no-repeat">
	<div>
		<table class="logo">
			<tr>
				<td>
					<a href="/"><img src="@Url.Content("~/Images/revigo_logo_transparent_2.png")" alt="Revigo Logo" width="402" height="114" /></a>
				</td>
				<td style="width:95px;">
					<a href="http://www.irb.hr/eng" target="_blank">
						<img id="IRBLogo" alt="Ruđer Bošković Institute" src="@Url.Content("~/Images/irb_logo_new_95x82.png")" title="Ruđer Bošković Institute" />
					</a>
				</td>
			</tr>
		</table>
	</div>
	<div style="margin-top:3em; margin-left:auto; margin-right:auto; display:table;">
		<h2>
			<img src="@Url.Content("~/Images/PullingHair.jpg")" alt="Pulling Hair" align="middle" width="192" height="136" style="float:left; margin-right:20px;" />
			<div style="height:136px; vertical-align:middle; text-align:center; display:table-cell;">
				@Model.ErrorMessage</div>
		</h2>
	</div>
	<p style="text-align:center;">If you think this should not happen you can <a href="@Url.Content("~/Contact")">Contact Us</a> with details.</p>
</body>
</html>